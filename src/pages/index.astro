---
import Layout from '../layouts/Layout.astro';
import { format } from "date-fns";
import { getTimelineInfos, convertTextAarry } from '../services/notion';

const pages = await getTimelineInfos();

---


<Layout title="网球前进 Timeline">
	<main>
		<div class="py-12">
			<div class="hero container">
				<div class="hero-content text-center">
				<div class="max-w-md">
					<h1 class="text-5xl font-bold">哈喽, 我是 Lantt。</h1>
					<p class="py-6">这里是我的网球改善记录以及当下的目标，如果你也喜欢网球，希望你能在这里也能有所收获。
				</div>
				</div>
			</div>
		</div>
		<section>
			<ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
				{
					pages.map((page, i) => {
						return (
							<li>
								{i !== 0 && <hr class={`${pages[i+1]?.doing.status.name === 'Done' ? "bg-primary" : ""}`}/> }
								<div class="timeline-middle">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class={`${page.doing.status.name === 'Done' ? "text-primary" : ""} h-5 w-5`}><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" /></svg>
								</div>
								<div class={`${i % 2 === 0 ? "timeline-start md:text-end" : "timeline-end"} mb-10`}>
									<time class="font-mono italic">{format(new Date(page.date.date.start), 'MM/dd/yyyy')}</time>
									<div class="text-lg font-black">{convertTextAarry(page.title.title)}</div>
									{convertTextAarry(page.description.rich_text)}
								</div>
								<hr class={`${page.doing.status.name === 'Done' ? "bg-primary" : ""}`}/>
							</li>
						)
					})
				}
			</ul>
			</section>
		  <footer class="footer footer-center p-10">
			<aside>
			  <p>Copyright © 2024 - All right reserved by Lantt</p>
			</aside> 
			<nav>
			  <div class="grid grid-flow-col gap-4">
				<a href="https://twitter.com/Lanttcat"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path></svg></a>
				<!-- <a><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path></svg></a>
				<a><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"></path></svg></a> -->
			  </div>
			</nav>
		  </footer>
	</main>
</Layout>

<style>
	main {
		@apply container;
		@apply mx-auto;
		@apply px-4;
		max-width: 1024px;
	}
</style>
